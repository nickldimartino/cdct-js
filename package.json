{
  "name": "cdct-pv",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "pact:consumer": "cross-env NODE_OPTIONS=--experimental-vm-modules jest src/consumer/consumer.pact.test.js",
    "provider:start": "node src/provider/server.js",
    "pact:verify": "node src/provider/verify.js",
    "pact:publish": "node scripts/publish.cjs",
    "pact:can-i-deploy": "node scripts/can-i-deploy.cjs",
    "pact:consumer:good": "node -e \"require('fs').rmSync('pacts',{recursive:true,force:true})\" && cross-env NODE_OPTIONS=--experimental-vm-modules jest src/consumer/consumer.pact.test.js",
    "pact:consumer:bad":  "node -e \"require('fs').rmSync('pacts',{recursive:true,force:true})\" && cross-env NODE_OPTIONS=--experimental-vm-modules jest src/consumer/consumer.pact.bad.test.js",
    "demo:bad":         "npm run pact:consumer:bad && cross-env BRANCH=demo-bad CONSUMER_VERSION_SUFFIX=bad node scripts/publish.cjs",
    "demo:verify:bad": "cross-env CONSUMER_BRANCH=demo-bad PROVIDER_BASE_URL=http://127.0.0.1:9010 npm run pact:verify",
    "demo:good":        "npm run pact:consumer:good && cross-env BRANCH=main CONSUMER_VERSION_SUFFIX=good node scripts/publish.cjs",
    "demo:verify:good": "cross-env CONSUMER_BRANCH=main node src/provider/verify.js"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^15.0.1",
    "@pact-foundation/pact-cli": "^16.1.2",
    "cross-env": "^7.0.3",
    "jest": "^30.0.5"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^5.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "transform": {}
  }
}
