  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "pact:consumer": "cross-env NODE_OPTIONS=--experimental-vm-modules jest src/consumer/consumer.pact.test.js",
    "provider:start": "dotenv -e .env -- node src/provider/server.js",
    "pact:verify": "dotenv -e .env -- node src/provider/verify.pact.test.js",
    "pact:publish": "dotenv -e .env -- pact-broker publish ./pacts --branch main --consumer-app-version=%CONSUMER_VERSION% --broker-base-url=%PACT_BROKER_BASE_URL% --broker-token=%PACT_BROKER_TOKEN%",
    "pact:can-i-deploy": "dotenv -e .env -- pact-broker can-i-deploy --pacticipant ProviderService --version %PROVIDER_VERSION% --to-environment test --broker-base-url=%PACT_BROKER_BASE_URL% --broker-token=%PACT_BROKER_TOKEN%"
  },
